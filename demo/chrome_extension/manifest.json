{
  "manifest_version": 2,

  "name": "miiiTV",
  "description": "This is a miiiTV for chrome extension,
  it can add youtube video to miiTV.",
  "version": "1.0",
  "background":
  {
    "page":"background.html"
  },

  "permissions": [
    "tabs",
    "http://*/*",
    "http://*.facebook.com/*"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}